<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#493537"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t_From"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="@string/From"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/e_From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_700"
            android:ems="10"
            android:inputType="number|phone"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/s_From"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/purple_700"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="389dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t_To"
            android:layout_width="39dp"
            android:layout_height="wrap_content"
            android:text="@string/To"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/t_To2"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_700"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/s_To"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/purple_700"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="79dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="398dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/purple_500"
            android:onClick="on_convert"
            android:text="@string/Convert"
            android:textAlignment="center"
            android:textSize="20sp"
            app:iconTint="#E91E63"
            app:rippleColor="@color/purple_700" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:lineSpacingExtra="10sp"
            android:text="@string/Енди"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Длины"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radio_grop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/radio_Длины"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:buttonTint="@color/purple_700"
                android:text="Длины"
                android:textColor="#FFFFFF"
                android:textColorHighlight="@color/purple_200"
                android:textColorLink="@color/purple_700"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio_Время"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:buttonTint="@color/purple_700"
                android:checked="true"
                android:text="Время"
                android:textColor="#FFFFFF"
                android:textColorHighlight="@color/purple_200"
                android:textColorLink="@color/purple_700"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/radio_Массы"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/purple_500"
                android:buttonTint="@color/purple_700"
                android:text="Массы"
                android:textColor="#FFFFFF"
                android:textColorHighlight="@color/purple_200"
                android:textColorLink="@color/purple_700"
                android:textSize="20sp" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:onClick="on_vibor"
        android:text="Подвердить" />

</LinearLayout>